<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<% if @route.trains.empty?%>
  <strong>Поездов на маршруте нет</strong>
<% else %>
  <strong>Поезда на маршруте:</strong>
  <ol>
    <% @route.trains.each do |t| %>
      <li> <%= link_to t.number, t %> </li>
    <% end %>
  </ol>
<% end %>

<% if @route.railway_stations.empty?%>
  <strong>Станций в маршруте нет</strong>
<% else %>
  <strong>Станции на маршруте:</strong>
  <ol>
    <% @route.railway_stations.each do |s| %>
      <li> <%= link_to s.title, s %> </li>
    <% end %>
  </ol>
<% end %>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
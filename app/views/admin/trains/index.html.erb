<h1>Trains</h1>

<table border = "1" rules="all" class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th>Number</th>
      <th colspan="3">Actions</th>
      <th>Departure</th>
      <th>Arrival</th>
    </tr>
  </thead>

  <tbody>
    <%= render @trains %>
  </tbody>
</table>

<br>

<%= button_to "New Train", new_admin_train_path, method: :get, class: 'btn btn-primary' %>


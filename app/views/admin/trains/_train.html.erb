<tr class="table-secondary">
  <td>
    <%= train.number %>
    <%= render 'form', train: train, hidden: true %>
  </td>
  <td><%= link_to 'Show', admin_train_path(train) %></td>
  <td><%= link_to 'Edit', '', class: 'edit_train', data: {train_id: train.id} %></td>
  <td><%= link_to 'Destroy', admin_train_path(train), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <td><%= train.departure_in %></td>
  <td><%= train.arrival_in %></td>
</tr>

<table border = "1" rules="all">
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3">Actions</th>
      <th>Departure</th>
      <th>Arrival</th>
    </tr>
  </thead>

  <tbody>
    <% @route.trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= link_to 'Show', admin_train_path(train) %></td>
        <td><%= link_to 'Edit', edit_admin_train_path(train) %></td>
        <td><%= link_to 'Destroy', admin_train_path(train), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= train.departure_in %></td>
        <td><%= train.arrival_in %></td>
      </tr> 
    <% end %>
  </tbody>
</table>
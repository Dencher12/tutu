<h1>Train's search</h1>

<%= form_with(url: 'results', method: :get, local: true) do %>
  <div class="field">
    <%= label_tag :first_station %>
    <%= select :first_station, :id, @stations.collect { |s| [s.title, s.id ] }%>
  </div>

  <div class="field">
    <%= label_tag :last_station %>
    <%= select :last_station, :id, @stations.collect { |s| [s.title, s.id ] } %>
  </div>

  <div class="actions">
    <%= submit_tag('Search!') %>
  </div>

  <%= link_to 'My tickets', tickets_path %>
<% end %>